<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- General Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- General -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:windowContentOverlay">@drawable/title_bar_shadow</item>

        <!-- ListView -->
        <item name="android:listViewStyle">@style/MyListView</item>

        <!-- ActionBar -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionMenuTextColor">@color/gray</item>

        <item name="android:actionBarTabStyle">@style/MyActionBar.TabStyle</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBar.TabText</item>
    </style>

    <!-- MiniPlayer -->
    <style name="MyMiniPlayer" parent="">
        <item name="android:background">@color/primary_transparent</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="MyMiniPlayer.Title" parent="MyTextAppearance.Widget.ListView.ItemView.Title">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="MyMiniPlayer.Subtitle" parent="MyTextAppearance.Widget.ListView.ItemView.Subtitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Transparent Theme -->
    <style name="AppTheme.Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- Custom ActionBar -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/white</item>
        <item name="android:backgroundStacked">@color/white</item>

        <item name="android:titleTextStyle">@style/MyActionBar.TitleStyle</item>
        <item name="android:subtitleTextStyle">@style/MyActionBar.SubtitleStyle</item>
    </style>

    <style name="MyActionBar.TitleStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="MyActionBar.SubtitleStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="MyActionBar.TabStyle" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_myactionbar</item>
    </style>

    <style name="MyActionBar.TabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/gray</item>
    </style>
    
    <style name="MyActionBar.TabBar" parent="@style/Widget.AppCompat.ActionBar.TabBar">
        <item name="android:background">@color/white</item>
    </style>

    <!-- Custom List View -->
    <style name="MyListView" parent="@android:style/Widget.ListView">
        <item name="android:cacheColorHint">@color/white</item>
        <item name="android:background">@color/white</item>
        <item name="android:listSelector">@drawable/list_view</item>
        <item name="android:divider">@drawable/list_divider</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <!-- Custom List Item -->
    <style name="MyListView.ListItem" parent="">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="MyListView.ListItem.Title" parent="MyTextAppearance.Widget.ListView.ItemView.Title">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="MyListView.ListItem.Subtitle"
           parent="MyTextAppearance.Widget.ListView.ItemView.Subtitle">
    </style>

    <!-- Custom Drawer List View -->
    <style name="MyDrawerListView" parent="MyListView">
        <item name="android:listSelector">@drawable/drawer_list_view</item>
    </style>

    <style name="MyDrawerListView.ListItem" parent="MyListView.ListItem">
        <item name="android:paddingLeft">13dp</item>
        <item name="android:background">@drawable/drawer_list_view_item</item>
    </style>

    <!-- Custom Text Appearance -->
    <style name="MyTextAppearance" />

    <!--    Widgets -->
    <style name="MyTextAppearance.Widget">
        <item name="android:textSize">14sp</item>
    </style>

    <!--        ListView -->
    <style name="MyTextAppearance.Widget.ListView" />

    <style name="MyTextAppearance.Widget.ListView.ItemView">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="MyTextAppearance.Widget.ListView.ItemView.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyTextAppearance.Widget.ListView.ItemView.Subtitle">
        <item name="android:textSize">12sp</item>
    </style>

</resources>