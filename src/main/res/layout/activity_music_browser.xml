<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/music_browser_drawer_layout"
                android:layout_height="match_parent"
                android:layout_width="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/music_browser_view_pager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/music_browser_player_fragment">

        </android.support.v4.view.ViewPager>

        <FrameLayout
            android:id="@+id/music_browser_player_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

        </FrameLayout>

    </RelativeLayout>

    <ListView
        android:id="@+id/music_browser_left_drawer"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start">

    </ListView>
    
</android.support.v4.widget.DrawerLayout>